<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RetailerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_logo_txt"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_60sdp"
            android:src="@drawable/ic_gadgetmart" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_logo_txt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/_5sdp">

                <EditText
                    android:id="@+id/retailer_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/dotted_border"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Name"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/retailer_email_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/dotted_border"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Email"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/retailer_phone_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/dotted_border"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Phone"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/retailer_address_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/dotted_border"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Address"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp" />

                <Button
                    android:id="@+id/retailer_submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_below="@+id/password_layout"
                    android:layout_margin="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/login_button_background"
                    android:fontFamily="@font/roboto_light"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>